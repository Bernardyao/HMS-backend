# ============================================================
# HIS System Environment Variables Configuration
# ============================================================
# IMPORTANT: Copy this file to .env and fill in the actual values
# NEVER commit .env file to version control!

# ============================================================
# Database Configuration
# ============================================================
# Database name (will be created in PostgreSQL)
POSTGRES_DB=his_project

# Database user (will be created in PostgreSQL)
POSTGRES_USER=his_user

# Database password (GENERATE A STRONG RANDOM PASSWORD!)
# Use: openssl rand -base64 32
POSTGRES_PASSWORD=your_secure_password_here

# ============================================================
# Security Configuration
# ============================================================
# JWT Secret Key (MUST be at least 256 bits!)
# Use: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_at_least_256_bits_long_here

# ============================================================
# Spring Configuration
# ============================================================
# Active Spring profile (prod, dev, test)
SPRING_PROFILES_ACTIVE=prod

# Application server port
SERVER_PORT=8080

# ============================================================
# Additional Configuration (Optional)
# ============================================================
# JVM Memory Settings (uncomment to override Dockerfile defaults)
# JAVA_OPTS="-Xmx384m -Xms192m -XX:+UseG1GC -XX:MaxRAMPercentage=75"
