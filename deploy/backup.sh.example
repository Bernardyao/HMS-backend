#!/bin/bash
# ============================================================
# HIS System Database Backup Script
# ============================================================
# This script backs up the PostgreSQL database to /opt/his/backups
# and automatically removes backups older than 7 days
#
# Usage:
#   1. Copy to server: /opt/his/backup.sh
#   2. Make executable: chmod +x /opt/his/backup.sh
#   3. Test manually: ./backup.sh
#   4. Add to crontab: 0 2 * * * /opt/his/backup.sh >> /var/log/his-backup.log 2>&1
# ============================================================

# Configuration
BACKUP_DIR="/opt/his/backups"
DB_NAME="his_project"
DB_USER="his_user"
DB_HOST="localhost"
DATE=$(date +%Y%m%d_%H%M%S)
BACKUP_FILE="$BACKUP_DIR/his_db_$DATE.sql.gz"
RETENTION_DAYS=7

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Functions
log_info() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

log_warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Create backup directory if it doesn't exist
if [ ! -d "$BACKUP_DIR" ]; then
    log_info "Creating backup directory: $BACKUP_DIR"
    mkdir -p "$BACKUP_DIR"
fi

# Start backup
log_info "=========================================="
log_info "HIS Database Backup Started"
log_info "=========================================="
log_info "Database: $DB_NAME"
log_info "Backup file: $BACKUP_FILE"
log_info "Date: $(date)"

# Check if PostgreSQL is running
if ! pg_isready -h "$DB_HOST" > /dev/null 2>&1; then
    log_error "PostgreSQL is not running on $DB_HOST"
    exit 1
fi

# Perform backup
log_info "Starting database dump..."
if pg_dump -U "$DB_USER" -h "$DB_HOST" "$DB_NAME" | gzip > "$BACKUP_FILE"; then
    log_info "Backup completed successfully!"

    # Get backup file size
    BACKUP_SIZE=$(du -h "$BACKUP_FILE" | cut -f1)
    log_info "Backup size: $BACKUP_SIZE"

    # Remove old backups
    log_info "Removing backups older than $RETENTION_DAYS days..."
    DELETED=$(find "$BACKUP_DIR" -name "his_db_*.sql.gz" -mtime +$RETENTION_DAYS -delete -print | wc -l)
    log_info "Deleted $DELETED old backup file(s)"

    # List current backups
    log_info "Current backups in $BACKUP_DIR:"
    ls -lh "$BACKUP_DIR"/his_db_*.sql.gz 2>/dev/null || log_warn "No backup files found"

    log_info "=========================================="
    log_info "Backup completed successfully!"
    log_info "=========================================="
else
    log_error "Backup failed!"
    exit 1
fi
